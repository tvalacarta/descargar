#: import Animation kivy.animation.Animation

<Paso1>:

    BoxLayout:
        canvas:
            Color:
                rgb: 0.31, 0.37, 0.42
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"

        Label:
            canvas.before:
                Color:
                    rgb: 0.16, 0.22, 0.29
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: "Descargar vídeos de Aragón TV v2.0"
            text_size: self.size
            size_hint_y: None
            height: "40dp"
            halign: "center"
            valign: "middle"

        BoxLayout:
            orientation: "vertical"
            padding: ["20dp","15dp","20dp","15dp"]

            Label:
                text: ""

            BoxLayout:
                orientation: "horizontal"

                Label:
                    text: "Introduce la URL de la página donde está el vídeo"
                    text_size: self.size
                    size_hint_y: None
                    height: "40dp"

                Bubble
                    arrow_pos: "bottom_mid"
                    size_hint_y: None
                    height: "50dp"
                    size_hint_x: None
                    width: "100dp"

                    BubbleButton:
                        text: 'Pegar'
                        on_release: 
                            from kivy.core.clipboard import Clipboard
                            page_url.text = Clipboard.paste()

            Label:
                text: ""
                size_hint_y: None
                height: "10dp"

            TextInput:
                #text: "http://alacarta.aragontelevision.es/programas/vaughan/common-mistakes/common-mistakes-cap-65-16102012-1038"
                text: "http://alacarta.aragontelevision.es/programas/unidad-movil/unos-goyas-muy-aragoneses-12022016-2132"
                id: page_url
                multiline: False
                size_hint_y: None
                height: "35dp"

            Label:
                text: ""
                size_hint_y: None
                height: "10dp"

            Label:
                text: "Elige el directorio de destino"
                text_size: self.size
                size_hint_y: None
                height: "40dp"

            Label:
                text: ""
                size_hint_y: None
                height: "10dp"

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: "35dp"

                TextInput:
                    text: ""
                    id: target_folder
                    multiline: False
                    size_hint_y: None
                    height: "35dp"

                Label:
                    text: ""
                    size_hint_x: None
                    width: "10dp"

                Button:
                    text: "..."
                    on_release: app.target_selection()
                    size_hint_x: None
                    width: "80dp"
                    size_hint_y: None
                    height: "35dp"
                    background_normal: ""
                    background_color: [0.22, 0.65, 0.31, 1]

            Label:
                text: ""

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 0.16, 0.22, 0.29
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: "horizontal"
            padding: ["20dp","15dp","20dp","15dp"]
            size_hint_y: None
            height: "60dp"

            Button:
                text: "Anterior"
                #on_release: root.manager.current = root.manager.previous()
                opacity: 0

            Label:
                text: ""

            Button:
                text: "Siguiente"
                background_normal: ""
                background_color: [0.22, 0.65, 0.31, 1]
                on_release: 
                    #root.manager.current = root.manager.next()
                    app.url_ready(page_url.text)

