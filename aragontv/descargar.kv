<Paso3>:
    resultado: ""
    tamanyo: ""

    BoxLayout:
        canvas:
            Color:
                rgb: 0.31, 0.37, 0.42
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"

        Label:
            canvas.before:
                Color:
                    rgb: 0.16, 0.22, 0.29
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: "Descargar vídeos de Aragón TV v2.0"
            text_size: self.size
            size_hint_y: None
            height: "40dp"
            halign: "center"
            valign: "middle"

        BoxLayout:
            orientation: "vertical"
            padding: ["10dp","10dp","10dp","10dp"]

            ScrollView:

                Label:
                    text: root.resultado
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    valign: "top"
                    font_size: "10dp"

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 0.16, 0.22, 0.29
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: "horizontal"
            padding: ["20dp","15dp","20dp","15dp"]
            size_hint_y: None
            height: "60dp"

            Button:
                text: "Anterior"
                on_release: app.abort_download()
                background_normal: ""
                background_color: [0.22, 0.65, 0.31, 1]

            Label:
                text: root.tamanyo

            Button:
                text: "Siguiente"
                #on_release: root.manager.current = root.manager.next()
                opacity: 0

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: "30dp"
            Button:
                text: "Cancelar"
                on_release: root.cancel()

            Button:
                text: "Elegir"
                on_release: root.load(filechooser.path, filechooser.selection)

<MessageDialog>:
    orientation: "vertical"
    padding: ["10dp","10dp","10dp","10dp"]

    Label:
        id: message_body
        text_size: self.size
        halign: "center"
        valign: "middle"

    Label:
        text: ""
        size_hint_y: None
        height: "10dp"

    Button:
        text: "Entendido"
        on_release: app.dismiss_popup()
        size_hint_y: None
        height: "30dp"
        background_normal: ""
        background_color: [0.22, 0.65, 0.31, 1]
