            size_hint_y: None
            height: "40dp"
            halign: "center"
            valign: "middle"

        BoxLayout:
            orientation: "vertical"
            padding: ["10dp","10dp","10dp","10dp"]

            Image:
                id: cargando
                opacity: 0
                source: "loader.gif"

            Label:
                text: root.tamanyo

        Footer:

            FooterButton:
                text: "Anterior"
                on_release: app.abort_download()

            FooterButton:
                text: "Siguiente"
                opacity: 0

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: "30dp"
            Button:
                text: "Cancelar"
                on_release: root.cancel()

            Button:
                text: "Elegir"
                on_release: root.load(filechooser.path, filechooser.selection)

<MessageDialog>:
    orientation: "vertical"
    padding: ["10dp","10dp","10dp","10dp"]

    Label:
        id: message_body
        text_size: self.size
        halign: "center"
        valign: "middle"

    Label:
        text: ""
        size_hint_y: None
        height: "10dp"

    Button:
        text: "Entendido"
        on_release: app.dismiss_popup()
        size_hint_y: None
        height: "30dp"
        background_normal: ""
        background_color: [0.22, 0.65, 0.31, 1]
