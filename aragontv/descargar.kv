<Paso3>:
    tamanyo: ""

    BoxLayout:
        canvas:
            Color:
                rgb: 0.31, 0.37, 0.42
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"

        Label:
            canvas.before:
                Color:
